// media queries
tablet()
    @media screen and (min-width: $breakpoints.minTablet)
        {block}

desktop()
    @media screen and (min-width: $breakpoints.minDesktop)
        {block}

wide()
    @media screen and (min-width: $breakpoints.minWide)
        {block}

maxWide()
    @media screen and (min-width: $breakpoints.maxWide)
        {block}

// functions
button($bg-color, $color)
    background-color $bg-color
    border-radius $radius
    color $color
    display inline-block
    padding 12px 18px
    text-decoration none

centralize()
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

font($size, $weight, $align)
    font-size $size
    font-weight $weight
    text-align $align
