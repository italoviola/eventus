.header
    height auto
    width 100%
    background-color $primary-color
    display flex
    flex-flow column
    align-items center
    justify-content space-between
    padding 15px
    box-sizing border-box

    +tablet()
        flex-flow row
        align-items center
        justify-content space-between
        padding 15px
        box-sizing border-box

    .logo
        width auto
        margin-bottom 15px

        +tablet()
            margin 0

        img 
            height 60px

            +tablet()
                height 70px 
