.perfil
    width 90%
    margin 0 auto

    &-presentation
        presentationText()
        margin-bottom 30px

    &-content
        width 100%

        .interest-picks
            margin-bottom 30px

         &-logout
            text-align center

            .logout
                button($white, $secondary-color)
                border 1px solid $secondary-color
                margin 0 auto
                text-decoration none
                text-align center
                font-size 18px
                display block

                +tablet()
                    width 250px

            .change-interesse
                button($secondary-color, $white)
                border 0
                margin 0 auto
                text-decoration none
                text-align center
                font-size 18px
                display block
                margin-bottom 15px

                +tablet()
                    width 250px
