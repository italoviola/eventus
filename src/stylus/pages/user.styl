.usuario
    width 90%
    margin 0 auto

    &-presentation
        presentationText()
        margin-bottom 30px

    &-content
        width 100%

        &-picks
            margin-bottom 30px
            display flex
            flex-flow row wrap

            .pick
                display inline-block
                padding 15px
                border 1px solid #CCC
                border-radius $radius
                margin 0 15px 15px 0
                background-color $light-gray

         &-logout
            text-align center

            .logout
                button($white, $secondary-color)
                border 1px solid $secondary-color
                margin 0 auto
                text-decoration none
                text-align center
                font-size 18px
                display block

                +tablet()
                    width 250px

            .change-interesse
                button($secondary-color, $white)
                border 0
                margin 0 auto
                text-decoration none
                text-align center
                font-size 18px
                display block
                margin-bottom 15px

                +tablet()
                    width 250px
