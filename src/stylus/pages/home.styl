.home
    width 90%
    margin 0 auto

    &-hello
        margin-bottom 30px

        h1
            font(32px, bold, center)
            color $secondary-color
            margin 0

        p
            font(18px, normal, center)
            color $black
            line-height 1.6

    &-events
        display flex
        flex-flow column

        +tablet()
            flex-flow row wrap
            align-items stretch
            justify-content space-evenly

        .event-card

            img
                max-width 100%
